<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:background="#CC6666"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- textAllCaps: in hoa -->
    <TextView
        android:text="quan ly album"
        android:textSize="30dp"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:background="#F34F4F"
        android:layout_height="wrap_content"></TextView>
    <Button
        android:id="@+id/btnaddalbum"
        android:background="#62B5FC"
        android:layout_marginTop="100dp"
        android:text="Them Album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Button>
    <Button
        android:id="@+id/btnpreview"
        android:layout_marginTop="20dp"
        android:background="#62B5FC"
        android:text="Xem danh sach Album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Button>
    <Button
        android:id="@+id/btnquanlybaihat"
        android:background="#62B5FC"
        android:text="Quan ly bai hat"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Button>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>
    <TextView
        android:id="@+id/thuma"
        android:text="text ma album"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/thuten"
        android:text="text ten album"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
</LinearLayout>